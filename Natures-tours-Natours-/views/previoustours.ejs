    <style>
        /* Global styles */
* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 16px;
    color: #444;
    background-color: #f2f2f2;
  }
  
  h1, h2, h3 {
    margin-bottom: 1rem;
  }
  
  p {
    margin-bottom: 0.5rem;
  }
  
  /* Page-specific styles */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 1rem;
    background-color: #fff;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
  }
  
  .tour {
    margin-bottom: 2rem;
    border: 1px solid #ccc;
    padding: 1rem;
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }
  
  .tour:hover {
    transform: translateY(-5px);
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
  }
  
  .tour h2 {
    font-size: 1.5rem;
    color: #333;
    text-transform: uppercase;
  }
  
  .tour .image {
    margin-bottom: 1rem;
    position: relative;
  }
  
  .tour .image img {
    width: 100%;
    height: auto;
    border-radius: 5px;
  }
  
  .tour .image::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.7));
    z-index: 1;
    border-radius: 5px;
  }
  
  .tour .details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .tour .details h3 {
    font-size: 1.2rem;
    color: #555;
  }
  
  .tour .details p {
    font-size: 0.9rem;
    color: #888;
  }
  
  .tour .reviews {
    margin-top: 1rem;
  }
  
  .tour .reviews h3 {
    font-size: 1.2rem;
    color: #555;
  }
  
  .tour .reviews p {
    font-size: 0.9rem;
    color: #888;
  }
  
  .tour .reviews .quote {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  
  .tour .reviews .author {
    font-size: 0.9rem;
    color: #555;
  }
  
  .tour .reviews .author::before {
    content: "- ";
  }
  
  .btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #2c3e50;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.2s ease-in-out;
  }
  
  .btn:hover {
    background-color: #1abc9c;
  }
  

  
    </style>

